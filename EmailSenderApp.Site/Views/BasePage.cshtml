@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.BasePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}


<!-- About section-->
        <section id="about">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">
                        <h4>Hi! want to connect? Send an email right now.</h4>
						<br />
					<form action="javascript:void(0);" method="POST" onsubmit="sendEmail()">
						<div class="form-group">
							<label for="exampleInputEmail1">To</label>
							<input type="email" class="form-control col-lg-2" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">							
						</div>
						<br />
					<div class="form-group">
						<label for="exampleInputEmailFrom">Enter Your Email</label>
						<input type="email" class="form-control col-lg-2" id="exampleInputEmailFrom" aria-describedby="emailHelp" placeholder="Sent By">
					</div>
					<br />
					<div class="form-group">
						<label for="exampleInputFullName">Full Name</label>
						<input type="text" class="form-control col-lg-2" id="exampleInputFullName" aria-describedby="emailHelp" placeholder="Enter Your Full Name">						
					</div>
						<br />
					<div class="form-group">
						<label for="exampleInputEmailSubject">Subject</label>
						<input type="text" class="form-control col-lg-2" id="exampleInputSubject" aria-describedby="emailHelp" placeholder="Enter Subject">						
					</div>
					<br />
					<div class="form-group">
						<label for="exampleInputEmailSubject">Message</label>
						<textarea class="form-control" id="exampleFormControlTextarea" rows="3"></textarea>
					</div>					
					<br />
					<button type="submit" class="btn btn-primary">Submit</button>
					<br />
					<div class="alert alert-success default-spacer" role="alert" id="statusMessage" hidden="hidden" maring="auto">
						Email Sent!
					</div>
					<div class="alert alert-danger default-spacer" role="alert" id="emailFailed" hidden="hidden" maring="auto">
						Email could not be sent! Check bot email configurations.
					</div>
					</form>
                    </div>
                </div>
            </div>
        </section>